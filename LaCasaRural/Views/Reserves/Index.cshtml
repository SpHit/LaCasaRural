@model IEnumerable<LaCasaRural.Models.Reserva>

@{
    ViewBag.Title = "Index";
}

<h2>Reserves</h2>

<p>
    @Html.ActionLink("Crear reserva", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Llogater.NomLlogater)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataEntrada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataSortida)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Llogater.NomLlogater)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataEntrada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataSortida)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdReserva }) |
            @Html.ActionLink("Detalls", "Details", new { id=item.IdReserva }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdReserva })
        </td>
    </tr>
}

</table>
